# VideoChat 环境变量配置
# 复制此文件为 .env 并修改相应的值

# ==================== 必须配置 ====================
# AI API 密钥 - 必须设置！
AI_API_KEY=your-openai-api-key-here

# ==================== 可选配置 ====================
# AI 服务配置
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo

# Whisper 配置
WHISPER_MODEL=small
WHISPER_LANGUAGE=zh
WHISPER_DEVICE=auto

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=true
ENVIRONMENT=development

# 文件存储
UPLOAD_DIR=uploads
MAX_FILE_SIZE=1073741824

# 系统配置
CACHE_ENABLED=true
CACHE_TTL=3600
LOG_LEVEL=INFO
SECRET_KEY=videochat-secret-key-change-in-production

# 下载配置
DOWNLOAD_ENABLED=true
DOWNLOAD_TIMEOUT=300
